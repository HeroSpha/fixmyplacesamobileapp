<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Fixmyplacemobileapp.Views.ResetPage" Title="Reset password">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="10">
            <Entry Placeholder="Email address" Text="{Binding Email, Mode=TwoWay}" />
            <Button Text="Reset password" TextColor="White" BackgroundColor="{StaticResource Primary}" Command="{Binding ResetCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>